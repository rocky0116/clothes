<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#e10602"
                android:centerY="0.75"
                android:endColor="#b16000"
                android:startColor="#e10602" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#e10602"
                    android:centerY="0.75"
                    android:endColor="#e10602"
                    android:startColor="#e10602" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#000061"
                    android:centerY="0.75"
                    android:endColor="#000061"
                    android:startColor="#000061" />
            </shape>
        </clip>
    </item>

</layer-list>